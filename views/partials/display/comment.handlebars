<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title"><h2>{{headline}}</h2></span>
    <h5>{{summary}}</h5>
  </div>
  <div class="card-action">
    <a href="https://www.cinemablend.com/{{url}}" class="waves-effect waves-light btn">See Again</a>
    <a href="/" class="waves-effect waves-light btn">back</a> 
  </div>
</div>

<h4 class="col s12">User comments below</h4>

<div class="row">
  <div class="col s12">
    <form action="/api/comments/" method="post">
      <div class="row">
        <div class="input-field col s8">
          <textarea id="comment-input" name="user_comment" class="materialize-textarea" data-length="120"></textarea>
          <label for="comment-input">Comment</label>
        </div>
        <div class="input-field col s4">
          <input value="{{id}}" name="post_id" id="disabled" type="text" class="validate">
          <label for="disabled"></label>
        </div>
        
      </div>
      
      <div class="row">
        <div class="input-field">
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div> 
      </div>
    
    </form>

  </div>
          
</div>
